.top {
    width: 100vw;
    padding-top: 88px;
    position: relative;
    box-sizing: border-box;
}

.content {
    padding: 0 40rpx;
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    position: relative;
}

.title, .desc {
    color: #fff;
}

.info_box, .collect_box {
    width: 60rpx;
    height: 60rpx;
}

.collect_box {
    position: absolute;
    bottom: 10rpx;
    right: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.collect {
    width: 40rpx;
    height: 40rpx;
    opacity: 0.6;
}

.info_box {
    position: absolute;
    bottom: 10rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.i_icon {
    width: 40rpx;
    height: 40rpx;
    opacity: 0.6;
}

.title {
    font-size: 30rpx;
    line-height: 35rpx;
    font-weight: 800;
}

.desc {
    font-size: 30rpx;
    line-height: 35rpx;
    opacity: 0.6;
}

.container {
    flex-wrap: wrap;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
}

.cell {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.cell_title {
    color: #fff;
    font-size: 26rpx;
    margin-left: 30rpx;
}

.bottom {
    height: 200rpx;
    width: 100vw;
}

.cell_info {
    width: 100vw;
    height: 145rpx;
    box-shadow: inset 0 -5rpx 10rpx -5rpx rgba(0, 0, 0, 0.3),
                inset 0 5rpx 10rpx -5rpx rgba(0, 0, 0, 0.3);
    position: relative;
}

.cell_info_arrow {
    position: absolute;
    top: 0;
    width: 0;
    height: 0;
    border-width: 25rpx;
    border-style: solid;
    border-color: #fcc transparent transparent transparent;
}
