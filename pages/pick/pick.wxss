.colors_container {
    padding: 0 60rpx;
    padding-top: 30rpx;
    background: linear-gradient(#858c96, #414854);
    min-height: 100vh;
    box-sizing: border-box;
}

.color_item {
    width: 290rpx;
    height: 395rpx;
    background: #b1b5bb;
    border-radius: 12rpx;
    margin-right: 40rpx;
    margin-bottom: 40rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 22rpx rgba(0, 0, 0, 0.5);
}

.color_item_cell_1 {
    width: 290rpx;
    height: 290rpx;
    border-radius: 290rpx;
    position: absolute;
    right: -80rpx;
    top: -100rpx;
}

.color_item_cell_2 {
    width: 230rpx;
    height: 230rpx;
    position: absolute;
    right: -70rpx;
    border-radius: 230rpx;
    top: 50rpx;
}

.color_item_cell_3 {
    width: 290rpx;
    height: 290rpx;
    position: absolute;
    left: -130rpx;
    border-radius: 290rpx;
    bottom: -100rpx;
}

.color_list {
    width: 200rpx;
    margin-left: 50rpx;
}

.color_list_item {
    margin-bottom: 20rpx;
    margin-top: 10rpx;
}

.color_list_item_color {
    width: 40rpx;
    height: 40rpx;
    border-radius: 6rpx;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

.color_list_item_text {
    color: #fff;
    font-weight: bolder;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-left: 20rpx;
    opacity: 0.8;
}

.add_pic_container {
    width: 630rpx;
    border-radius: 12rpx;
    height: 100%;
    margin-top: 50rpx;
    box-shadow: 0 0 22rpx rgba(0, 0, 0, 0.5);
    text-align: center;
    box-sizing: border-box;
}

.add_pic {
    border-radius: 12rpx;
    height: 394rpx;
    background: linear-gradient(to right, #3b7c87, #3b7c87);
    box-shadow: 0 0 22rpx rgba(0, 0, 0, 0.5);
    padding-top: 150rpx;
    box-sizing: border-box;
}

.add_pic_img {
    width: 95rpx;
    height: 95rpx;
    opacity: 0.8;
}

.ch_pic {
    width: 100%;
    height: 100%;
}

.ch_pic_img {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}
