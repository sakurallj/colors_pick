.item {
    width: 100%;
    height: 100%;
    margin-bottom: 60rpx;
    position: relative;
}

.item:last-child {
    margin-bottom: 0;
}

.collect_box {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.collect {
    width: 40rpx;
    height: 40rpx;
    opacity: 0.6;
}

.info_box {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.i_icon {
    width: 40rpx;
    height: 40rpx;
    opacity: 0.6;
}

.text_box {
    position: absolute;
    bottom: 80rpx;
    left: 70rpx;
    color: #fff;
}

.title {
    font-size: 43rpx;
}

.desc {
    font-size: 36rpx;
    opacity: 0.6;
}

.tip_text_box {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 80%;
    height: 100%;
    margin: 0 auto;
    text-align: center;
}

.tip_title {
    color: #fff;
    font-size: 45rpx;
    line-height: 65rpx;
}

.tip_desc {
    color: rgba(255, 255, 255, 0.3);
    font-size: 25rpx;
    /* margin-top: 20rpx; */
}
